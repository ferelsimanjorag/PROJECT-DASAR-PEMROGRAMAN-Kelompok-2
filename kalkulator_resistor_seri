#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int isNumber(char *str) {
    int i = 0;
    if (str[0] == '-' || str[0] == '+') i = 1;

    for (; str[i] != '\0'; i++) {
        if (str[i] < '0' || str[i] > '9')
            return 0;
    }
    return 1;
}

int main() {
    char input[50];
    int n;
    float R, total = 0;

    printf("=== KALKULATOR RESISTOR SERI ===\n");

    // Validasi jumlah resistor
    while (1) {
        printf("Masukkan jumlah resistor: ");
        scanf("%s", input);

        if (isNumber(input)) {
            n = atoi(input);
            if (n > 0) break;
        }

        printf("Input tidak valid! Masukkan angka saja.\n");
    }

    // Input tiap resistor
    for (int i = 1; i <= n; i++) {
        while (1) {
            printf("Masukkan nilai resistor R%d (ohm): ", i);
            scanf("%s", input);

            if (isNumber(input)) {
                R = atof(input);
                break;
            }

            printf("Input salah! Hanya boleh angka.\n");
        }

        total += R;
    }

    printf("\nHambatan total rangkaian seri = %.2f ohm\n", total);

    return 0;
}
